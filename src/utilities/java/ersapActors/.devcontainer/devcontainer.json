{
    "name": "ERSAP Actors Development",
    "dockerFile": "Dockerfile",
    "runArgs": [
        "--network=host"
    ],
    "forwardPorts": [
        5000,
        5001,
        5002
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "vscjava.vscode-gradle",
                "redhat.java",
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens",
                "vscjava.vscode-java-debug",
                "vscjava.vscode-java-dependency",
                "vscjava.vscode-java-test",
                "redhat.vscode-commons",
                "visualstudioexptteam.vscodeintellicode"
            ],
            "settings": {
                "java.configuration.updateBuildConfiguration": "automatic",
                "java.server.launchMode": "Standard",
                "java.jdt.ls.java.home": "/usr/lib/jvm/java-17-openjdk-amd64",
                "java.configuration.runtimes": [
                    {
                        "name": "JavaSE-17",
                        "path": "/usr/lib/jvm/java-17-openjdk-amd64",
                        "default": true
                    }
                ],
                "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
                "java.format.settings.profile": "GoogleStyle",
                "java.completion.importOrder": [
                    "java",
                    "javax",
                    "org",
                    "com"
                ],
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": true
                },
                "java.compile.nullAnalysis.mode": "automatic",
                "java.debug.settings.hotCodeReplace": "auto"
            }
        }
    },
    "remoteEnv": {
        "ERSAP_HOME": "/opt/ersap",
        "ERSAP_USER_DATA": "/workspace/src/utilities/java/ersapActors/ersap-data"
    },
    "postCreateCommand": "bash src/utilities/java/ersapActors/.devcontainer/setup.sh",
    "workspaceFolder": "/workspace",
    "workspaceMount": "source=/home/jeng-yuantsai/RTDP/ersap-actors,target=/workspace,type=bind,consistency=cached",
    "mounts": [
        "source=/home/jeng-yuantsai/RTDP/ersap-actors/src/utilities/cpp/pcap2stream,target=/workspace/src/utilities/cpp/pcap2stream,type=bind,consistency=cached",
        "source=${localEnv:HOME}/.gitconfig,target=/home/developer/.gitconfig,type=bind,consistency=cached",
        "source=/scratch/jeng-yuantsai,target=/scratch/jeng-yuantsai,type=bind,consistency=cached"
    ]
}